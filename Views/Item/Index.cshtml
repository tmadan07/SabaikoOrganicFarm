@model IEnumerable<SabaikoOrganicFarm.Models.Item>

@{
    ViewData["Title"] = "List of Items";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.FullName
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.FullName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><a>Dascription: </a>@item.Description</p>
                            <p class="card-text"><b>Type: </b>@item.Type</p>
                            <p class="card-text"><c>Price:$</c>@item.Price</p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white" asp-controller="Order" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    }
</div>

<div style="position:fixed; right:25px; bottom:100px" class="text-white">
    <a asp-controller="Item" asp-action="Create" class="btn btn-success"><i>Add New</i></a>
</div>